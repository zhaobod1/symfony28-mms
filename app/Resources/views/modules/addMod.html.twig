    </h1>
{% endblock %}

{% block pageContent %}
    <div class="row">
        <div class="col-md-12">

            <!-- BEGIN PROFILE CONTENT -->
            <div class="profile-content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light ">
                            <div class="portlet-title tabbable-line">
                                <div class="caption caption-md">
                                    <i class="icon-globe theme-font hide"></i>
                                    <span class="caption-subject font-blue-madison bold uppercase">请仔细填写信息</span>
                                </div>
                                <ul class="nav nav-tabs">
                                    <li class="active">
                                        <a href="#tab_1_1" data-toggle="tab">模块封面</a>
                                    </li>
                                    <li>
                                        <a href="#tab_1_2" data-toggle="tab">添加/修改字段</a>
                                    </li>

                                </ul>
                            </div>
                            <div class="portlet-body">
                                <div class="tab-content">
                                    <!-- PERSONAL INFO TAB -->
                                    <div class="tab-pane active" id="tab_1_1">
                                        {% form_theme form 'form_widget_style_addMod.html.twig' %}
                                        {{ form_start(form) }}
                                        {{ form_label(form.name) }}
                                        {{ form_widget(form.name) }}
                                        {{ form_label(form.avatar) }}
                                        {{ form_widget(form.avatar) }}

                                        {{ form_end(form) }}
                                    </div>
                                    <!-- END PERSONAL INFO TAB -->
                                    <!-- CHANGE AVATAR TAB -->
                                    <div class="tab-pane" id="tab_1_2">

                                        <form action="#" role="form">
                                            <input type="hidden" id="moduleId" value="{{ moduleId }}">
                                            <div class="col-md-12">
                                                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                                                <div class="portlet light bordered">
                                                    <div class="portlet-title">
                                                        <div class="caption font-dark">
                                                            <div class="col-md-4">
                                                                <a href="#">
                                                                    <div class="btn-group">
                                                                        <a href="{{ path('addModField') }}?moduleId={{ moduleId }}" class="btn green" target="_self">
                                                                            添加字段
                                                                            <i class="fa fa-plus"></i>
                                                                        </a>
                                                                    </div>
                                                                </a>

                                                            </div>
                                                        </div>
                                                        <div class="tools"></div>
                                                    </div>
                                                    <div class="portlet-body">
                                                        <table class="table table-striped table-bordered table-hover table-checkable" id="datatable_ajax">
                                                            <thead>
                                                            <tr role="row" class="heading">
                                                                <th width="2%">
                                                                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                                        <input type="checkbox" class="group-checkable" data-set="#sample_2 .checkboxes"/>
                                                                        <span></span>
                                                                    </label>
                                                                </th>
                                                                <th width="20%"> 字段ID号</th>
                                                                <th width="20%"> 字段名称</th>
                                                                <th width="15%"> 类型</th>
                                                                <th width="20%"> 字段值</th>
                                                                <th width="10%"> 是否必填</th>
                                                                <th width="20%"> 操作</th>
                                                            </tr>
                                                            <tr role="row" class="filter">
                                                                <td></td>
                                                                <td>
                                                                    <input type="text" class="form-control form-filter input-sm" name="order_customer_id">
                                                                </td>
                                                                <td>
                                                                    <input type="text" class="form-control form-filter input-sm" name="order_customer_name">
                                                                </td>
                                                                <td>
                                                                    <input type="text" class="form-control form-filter input-sm" name="order_customer_type"></td>
                                                                <td>
                                                                    <input type="text" class="form-control form-filter input-sm" name="order_customer_value"></td>

                                                                <td>
                                                                    <select name="order_customer_required" id="">
                                                                        <option value="0">否</option>
                                                                        <option value="1">是</option>
                                                                    </select>

                                                                </td>
                                                                <td>
                                                                    <div class="margin-bottom-5">
                                                                        <button class="btn btn-sm green btn-outline filter-submit margin-bottom">
                                                                            <i class="fa fa-search"></i> 搜索
                                                                        </button>
                                                                        <button class="btn btn-sm red btn-outline filter-cancel">
                                                                            <i class="fa fa-times"></i> 清空
                                                                        </button>
                                                                    </div>

                                                                </td>
                                                            </tr>
                                                            </thead>

                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                    <div class="portlet-body hide">
                                                        <table class="table table-striped table-bordered table-hover"
                                                               id="sample_1">
                                                            <thead>
                                                            <tr>
                                                                <th>字段ID</th>
                                                                <th>字段名称</th>
                                                                <th>字段类型</th>
                                                                <th>是否必填</th>
                                                                <th>操作</th>
                                                            </tr>
                                                            </thead>
                                                            <tfoot>
                                                            <tr>
                                                                <th>字段ID</th>
                                                                <th>字段名称</th>
                                                                <th>字段类型</th>
                                                                <th>是否必填</th>
                                                                <th>操作</th>
                                                            </tr>
                                                            </tfoot>
                                                            <tbody>
                                                            <tr>
                                                                <td>ZD_username</td>
                                                                <td>用户名</td>
                                                                <td>输入框</td>
                                                                <td>必填</td>

                                                                <td>
                                                                    <a href="#">修改</a>|
                                                                    <a class="cancel" href="#">删除</a>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>ZD_identity</td>
                                                                <td>身份证</td>
                                                                <td>输入框</td>
                                                                <td>必填</td>

                                                                <td>
                                                                    <a href="#">修改</a>|
                                                                    <a class="cancel" href="#">删除</a>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>ZD_photo</td>
                                                                <td>证件照</td>
                                                                <td>多文件上传</td>
                                                                <td>选填</td>

                                                                <td>
                                                                    <a href="#">修改</a>|
                                                                    <a class="cancel" href="#">删除</a>
                                                                </td>
                                                            </tr>

                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                                <!-- END EXAMPLE TABLE PORTLET-->

                                            </div>

                                            <div class="margin-top-10">

                                            </div>
                                        </form>
                                    </div>
                                    <!-- END CHANGE AVATAR TAB -->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PROFILE CONTENT -->
        </div>
    </div>
{% endblock %}
